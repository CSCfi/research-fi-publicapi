{
    "Serilog": {
        "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.OpenSearch" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": {
            "ConsoleSink": "Console",
            "OpenSearchSink": {
                "Name": "OpenSearch",
                "Args": {
                    "nodeUris": "http://localhost:9201",
                    "autoRegisterTemplate": true,
                    "indexFormat": "public-api-indexer-log"
                }
            }
        },
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "Application": "CSC.PublicApi.Indexer"
        }
    },
    "IndexNames": {
        "CSC.PublicApi.Service.Models.FundingCall.FundingCall": "api-dev-funding-call",
        "CSC.PublicApi.Service.Models.FundingDecision.FundingDecision": "api-dev-funding-decision",
        "CSC.PublicApi.Service.Models.Infrastructure.Infrastructure": "api-dev-infrastructure",
        "CSC.PublicApi.Service.Models.Organization.Organization": "api-dev-organization",
        "CSC.PublicApi.Service.Models.ResearchDataset.ResearchDataset": "api-dev-researchdataset"        
    }    
}